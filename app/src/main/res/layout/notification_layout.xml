<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/book6"
                android:layout_margin="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"
                android:id="@+id/imageView"/>

            <TextView
                android:id="@+id/txtSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Rajesh Hamal"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="requested you to exchange"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@+id/txtSender"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/txtAction"/>

            <TextView
                android:id="@+id/txtRequestedBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muna Madan"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/txtSender" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="with"
                app:layout_constraintStart_toEndOf="@+id/txtRequestedBook"
                app:layout_constraintTop_toBottomOf="@+id/txtAction" />

            <TextView
                android:id="@+id/txtProposedBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catch 22"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/txtAction" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 hours ago"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/txtRequestedBook"
                app:layout_constraintTop_toBottomOf="@+id/txtRequestedBook" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>

